<div class="sidebar">
  <div class="side-a">
    <div class="name">
      <%= link_to current_user.name, edit_user_path(current_user) %>
    </div>
    <div class="chat-button">
      <%= link_to "チャットを作成する", new_room_path %>
    </div>
  </div>
  <div class="side-b">
    <% current_user.rooms.each do |room| %>
    <div class="room">
      <a href="#"><%= room.name %></a>
    </div>
    <% end %>
  </div>
</div>