<div class="chat">
  <div class="chat-a">
    <div class="room-name">room1</div>
    <div class="fin-button">
      <%= link_to "チャットを終了する", "" %>
    </div>
  </div>
  <div class="chat-b">
    <div class="chat-box">
      <div class="chat-small">
        <div class="chat-name">Ace</div>
        <div class="chat-date">2022/05/01</div>
      </div>
      <div class=chat-comment>こんにちは</div>
    </div>
    <div class="chat-box">
      <div class="chat-small">
        <div class="chat-name">Joker</div>
        <div class="chat-date">2022/05/01</div>
      </div>
      <div class=chat-comment>こんばんは</div>
    </div>
  </div>
  <%= form_with model: [@room, @message], class: 'form', local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: 'message-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>
</div>